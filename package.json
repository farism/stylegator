{
  "private": true,
  "devDependencies": {
    "execa-pro": "1.0.8",
    "husky": "3.0.8",
    "lerna": "2.11.0",
    "lerna-git-flow-deploy": "0.5.3"
  },
  "scripts": {
    "build": "lerna run --no-parallel build",
    "dev": "lerna run dev",
    "precommit": "lerna run lint-staged",
    "deploy:next": "lerna-deploy --type=next",
    "deploy:stable": "lerna-deploy --type=stable",
    "deploy:ghpages": "node scripts/deploy_gh_pages",
    "pretty": "lerna run pretty",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
